/* pages/calander/calander.wxss */
.page {
  width: 100vw;
  min-height: 100vh;
  background: #f2f1f3;
}

.top-bar {
  background: white;
  width: 750rpx;
  position: relative;
  height: 90rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.date-tip {
  width: 750rpx;
  text-align: center;
  font-size: 32rpx;
  color: rgb(51,51,51);
}

.arrow-back {
  position: absolute;
  top: 21rpx;
  height: 48rpx;
  width: 48rpx;
  left: 30rpx;
}

.arrow-go {
  position: absolute;
  top: 21rpx;
  height: 48rpx;
  width: 48rpx;
  right: 30rpx;
}

.color-tip {
  height: 62rpx;
  width: 750rpx;
  display: flex;
  flex-direction: row;
}

.color-tip1 {
  display: flex;
  flex-direction: row;
  height: 20rpx;
  margin-top: 21rpx;
}

.squart {
  width: 20rpx;
  height: 20rpx;
  border-radius: 2rpx;
}

.text {
  margin-left: 8rpx;
  height: 20rpx;
  display: flex;
  align-items: center;
  font-size: 20rpx;
  color: rgb(51,51,51);
}

.board-wrapper {
  display: flex;
  flex-direction: row;
  width: 750rpx;
  height: 88vh;
}

.left-wrapper {
  width:86rpx;
  height: 88vh;
}

.morining-wrapper {
  width:85rpx;
  height: 40vh;
  writing-mode:vertical-rl;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  color: rgb(51,51,51);
  background-color: rgb(250,247,255);
}

.afternoon-wrapper {
  width: 85rpx;
  height: 40vh;
  writing-mode:vertical-rl;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  color: rgb(51,51,51);
  margin-top:4rpx;
  background-color: rgb(250,247,255);
}

.right-wrapper {
  width: 664rpx;
  height: 85vh;
}

.date-bar {
  display: flex;
  flex-direction: row;
  height: 8vh;
  width: 664rpx;
}

.info-wrapper {
  width: 664rpx;
  height: 80vh;
  display: flex;
  flex-direction: row;
}

.day-info {
  width: 94rpx;
  height: 80vh;
  margin-left: 4rpx;
}

.space-block {
  height: 8vh;
  width: 86rpx;
  background-color: rgb(250,247,255);
}

.date-block {
  height: 8vh;
  width: 94rpx;
  background-color: rgb(242,235,255);
  margin-left:4rpx;
}

.weekday {
  height: 4vh;
  width: 94rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 24rpx;
  color: rgb(65,15,151);
}

.date {
  height: 4vh;
  width: 94rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 24rpx;
  color: rgb(151,98,244);
}

.day-morning {
  background-color: white;
  height: 40vh;
  width: 94rpx;
}

.day-afternoon {
  margin-top: 4rpx;
  background-color: white;
  height: 40vh;
  width: 94rpx;
}

.vacation {
  width: 94rpx;
  height: 40vh;
  background-color: rgba(99,195,253,0.3);
  display: flex;
  justify-content: center;
  align-items: center;
  color: rgb(0,110,177);
  font-size: 26rpx;
}

.travel {
  width: 94rpx;
  height: 40vh;
  background-color: rgba(47,233,130,0.3);
  display: flex;
  justify-content: center;
  align-items: center;
  color: rgb(0,147,66);
  font-size: 26rpx;
}

.add-icon {
  width: 150rpx;
  height: 150rpx;
  position: fixed;
  top: 80vh;
  right:10rpx;
}

.free {
  height: 10vh;
  width:94rpx;
  background-color: white;
}

.busy {
  height: 10vh;
  width: 94rpx;
  background-color: rgba(255,165,45,0.3);
  color: rgb(212,121,0);
  font-size: 20rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
}

.time {
  width: 94rpx;
  text-align: center;
}

.location {
  margin-top:10rpx;
  width: 94rpx;
  text-align: center;
}

.name {
  width: 94rpx;
  margin-top:10rpx;
  text-align: center;
}